<?xml version="1.0" encoding="utf-8"?>
<!-- 類型 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">


    <solid android:color="@color/color_Red" />

    <!-- 文字與邊框的間距 -->
    <padding
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        android:left="5dp"/>
    <!-- 形狀大小 -->
    <size
        android:width="150dp"
        android:height="150dp" />
    <!-- 邊框線 -->
    <stroke
        android:width="1dp"
        android:color="@color/color_Green"
        android:dashGap="0dp"
        android:dashWidth="0dp" />
</shape>